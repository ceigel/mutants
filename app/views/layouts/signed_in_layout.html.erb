<% content_for :content do %>
  <div class ="row">
    <aside id="sidebar" class="hidden-xs hidden-sm col-sm-3">
      <section>
      <h4>Teams</h4>
      <ul class="nav nav-pills nav-stacked">
        <% Team.all.each do |team| %>
          <li><%= link_to team.name, team %></li>
      <% end %>
      </ul>
      </section>
      <section>
        <h4>Tasks</h4>
        <ul class="nav nav-pills nav-stacked">
          <% current_mutant.tasks.each do |task| %>
            <li>
              <%= task.name %>
            </li>
          <% end %>
        </ul>
      </section>
    </aside>
    <div class="col-sm-9 col-xs-12">
      <%= yield %>
    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>

