<h1>Mutants</h1>

<table id='mutants_table' class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Teams</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @mutants.each do |mutant| %>
      <tr>
        <td><%= link_to mutant.name, mutant %></td>
        <td><%= mutant.teams.map(&:name).join(', ') %></td>
        <td class='text-right'>
          <%= table_button_links(mutant) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
