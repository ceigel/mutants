<p id="notice"><%= notice %></p>

<h1>Mutants</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @mutants.each do |mutant| %>
      <tr>
        <td><%= link_to mutant.name, mutant %></td>
        <td class='text-right'>
          <%= edit_button_link(mutant) %>
          <%= destroy_button_link(mutant) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

