<p id="notice"><%= notice %></p>

<h1>Listing Mutants</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @mutants.each do |mutant| %>
      <tr>
        <td><%= link_to mutant.name, mutant %></td>
        <td class='text-right'><%= link_to 'Edit', edit_mutant_path(mutant) %> | 
        <%= link_to 'Destroy', mutant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

