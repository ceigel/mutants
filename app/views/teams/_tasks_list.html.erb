<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tasks</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @team.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td class='text-right'>
          <%= table_button_links(task, @team) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Task %>
  <%= button_link 'Add task',  new_team_task_path(@team), 'btn-info' %>
<% end %>
