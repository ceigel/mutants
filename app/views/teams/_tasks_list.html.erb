<div class='col-sm-4'>
  <h5>Tasks</h5>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @team.tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td class='text-right'>
            <%= table_button_links(task, @team) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= button_link 'Add task',  new_team_task_path(@team), 'btn-info' %>
